@page
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>dashboad page of my website.</title>
    <link rel="stylesheet" href="~/css/style.css" type="text/css">
</head>
<body>
    <nav class="page-nav">
        <div class="container">
            @Html.ActionLink("Home", "Index", "Home")
            @Html.ActionLink("Dashboard", "DisplayDashboard", "Dashboard")
            @Html.ActionLink("About", "AboutPage", "About")
            @Html.ActionLink("Car Model", "ShowAllCars", "Car")
            @Html.ActionLink("Login", "Login", "LoginAndRegister")
        </div>
    </nav>
    <header class="page-header">
        <div class="container">
            <h3>Login successful. You are now in dashboard page.</h3>

            <input type="button" id="usersButton" value="show all users" />
            <input type="button" id="usersClearButton" value="clear users" />
            <ul id="usersPlaceholder"> </ul>

            <h3>Do you want to use google website?</h3>

            <p id="demo1">Show google website?</p>
            <button onclick="voteYes()"> show</button>
            <button onclick="voteNo()">Don't show</button>


            <br /><br /><br />
            @await Html.PartialAsync("_MyPartialView")

            <br />
            <h3>This is the main view (Home Controller Index Action return View("Index.cshtml"))</h3>

        </div>


        <div class="container">
            <h2 id="mouseHover"> >> Move mouse here to get assignment details <<</h2>
            <p id="demo2"> </p>
        </div>

    </header>

    <script src="~/js/script1.js" type="text/javascript"></script>
    <script src="~/js/script2.js" type="text/javascript"></script>
</body>
</html>